{
  "manifest_version": 3,
  "name": "VoiLoad - voice message downloader of Facebook / Messenger",
  "description": "Download voice messages on Facebook / Messenger easily.",
  "version": "0.6.2",
  "author": "linpoju.richard@gmail.com",

  "permissions": [
    "activeTab",
    "contextMenus",
    "downloads",
    "webRequest",
    "storage"
  ],
  "host_permissions": [
    "*://*.facebook.com/*",
    "*://*.messenger.com/*",
    "*://*.fbcdn.net/*",
    "*://*.cdninstagram.com/*",
    "*://*.fbsbx.com/*"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "assets/icons/icon-16.png",
      "32": "assets/icons/icon-32.png",
      "48": "assets/icons/icon-48.png",
      "128": "assets/icons/icon-128.png"
    }
  },
  "icons": {
    "16": "assets/icons/icon-16.png",
    "32": "assets/icons/icon-32.png",
    "48": "assets/icons/icon-48.png",
    "128": "assets/icons/icon-128.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*.facebook.com/*", "*://*.messenger.com/*"],
      "js": ["scripts/content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["scripts/*", "onboarding/*"],
      "matches": ["*://*.facebook.com/*", "*://*.messenger.com/*"]
    }
  ],
  "background": {
    "service_worker": "scripts/background.js",
    "type": "module"
  }
}
