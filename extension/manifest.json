{
  "manifest_version": 3,
  "name": "VoiLoad: Facebook Messenger 語音訊息一鍵下載",
  "description": "一鍵下載 Facebook / Messenger 語音訊息",
  "version": "0.1.0",
  "author": "linpoju.richard@gmail.com",

  "permissions": ["activeTab", "contextMenus", "downloads", "webRequest"],
  "host_permissions": [
    "*://*.facebook.com/*",
    "*://*.messenger.com/*",
    "*://*.fbcdn.net/*",
    "*://*.cdninstagram.com/*",
    "*://*.fbsbx.com/*"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "assets/icons/icon-16.png",
      "32": "assets/icons/icon-32.png",
      "48": "assets/icons/icon-48.png",
      "128": "assets/icons/icon-128.png"
    }
  },
  "icons": {
    "16": "assets/icons/icon-16.png",
    "32": "assets/icons/icon-32.png",
    "48": "assets/icons/icon-48.png",
    "128": "assets/icons/icon-128.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*.facebook.com/*", "*://*.messenger.com/*"],
      "js": ["scripts/content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["scripts/*"],
      "matches": ["*://*.facebook.com/*", "*://*.messenger.com/*"]
    }
  ],
  "background": {
    "service_worker": "scripts/background.js",
    "type": "module"
  }
}
